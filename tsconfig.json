{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@common-types": [
        "./src/types"
      ],
      "@redis": [
        "./src/redis"
      ],
      "@orchestrator/*": [
        "./src/orchestrator/*"
      ],
      "@orchestrator": [
        "./src/orchestrator"
      ],
      "@kafka/*": [
        "./src/kafka/*"
      ],
      "@kafka": [
        "./src/kafka"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "@types/node",
      "jest"
    ]
  }
}